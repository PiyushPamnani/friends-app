<% if user_signed_in? %>
  <h1 class="display-4">Your Friends Are Here:</h1>
  <br/>
  <div id="friends">
    <table class="table table-striped table-bordered table-hover">
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Instagram</th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody>
        <% @friends.each do |friend| %>
          <%= render friend %>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to "New friend", new_friend_path, class: "btn btn-primary" %>
<% else %>
  <h1 class="display-4">Please Sign-In/Sign-Up to create your own Friends List!</h1>
<% end %>
