<div class="card" style="width: 35rem;">
  <div class="card-body">
    <h5 class="card-title display-4"><%= @friend.first_name %> <%= @friend.last_name %></h5>
    <p class="card-text lead"><%= @friend.email %>  | <%= @friend.phone %>  | <%= @friend.instagram %></p>
    <hr class="my-4">
    <div class="d-flex justify-content-evenly">
      <%= link_to "Edit", edit_friend_path(@friend), class: "btn btn-primary" %>
      <%= button_to "Delete", @friend, method: :delete, class: "btn btn-danger" %>
    </div>
  </div>
</div>
<br/>
<div>
  <%= link_to "Back", friends_path, class: "btn btn-dark" %>
</div>
